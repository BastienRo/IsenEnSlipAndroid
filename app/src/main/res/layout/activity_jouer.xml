<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="androidtoolbox.brodrigue.isen.fr.isenenslip.Jouer">

    <Spinner
        android:id="@+id/nbjoueur"
        android:layout_width="121dp"
        android:layout_height="47dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCommencer"
        app:layout_constraintEnd_toEndOf="@+id/tvNbJoueur"
        app:layout_constraintStart_toStartOf="@+id/tvNbJoueur"
        app:layout_constraintTop_toBottomOf="@+id/tvNbJoueur" />

    <TextView
        android:id="@+id/tvNbJoueur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/tvNbJoueur"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/nbjoueur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/btnCommencer"
        android:onClick="onCommencer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nbjoueur"
        app:layout_constraintStart_toStartOf="@+id/nbjoueur"
        app:layout_constraintTop_toBottomOf="@+id/nbjoueur"
        tools:text="@string/btnCommencer" />
</android.support.constraint.ConstraintLayout>
